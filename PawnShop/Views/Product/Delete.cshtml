@{
	ViewBag.Title = "Confirm Delete";
}

<div class="text-center">
    <div class="card">
        <h5 class="card-header">Confirm Delete</h5>
        <div class="card-body">
            <h5 class="card-title">Are you sure you want to delete this product?</h5>
            <p class="card-text">This action cannot be undone!</p>
            <form method="post">
                <div style="display:inline-flex">
                    <button asp-controller="Product" asp-action="Delete" class="text-danger">Confirm</button>
                    <button asp-controller="Product" asp-action="All" class="text-danger">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
