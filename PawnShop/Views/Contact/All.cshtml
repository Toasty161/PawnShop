@using PawnShop.Core.Models
@using PawnShop.Infrastructure.Data.Constants
@model List<ContactMessageViewModel>
@{
	ViewBag.Title = "All Messages";
}

<h1 class="text-center">All contact messages recieved:</h1>
<br />
@if (Model.Count > 0)
{
	<div class="text-center">
		@foreach (var message in Model)
		{
			<div class="card" style="width: 22rem;display:block;margin-left: auto; margin-right:auto; display:inline-flex">
				<div class="card-body">
					<h5 class="card-title">@message.Sender</h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary">Time sent: @message.TimeSent.ToString(DataConstants.TimeSentFormat)</h6>
                    <p class="card-text">@message.Message</p>
				</div>
			</div>
		}
	</div>
}
else
{
	<p class="text-center">No messages yet!</p>
}
